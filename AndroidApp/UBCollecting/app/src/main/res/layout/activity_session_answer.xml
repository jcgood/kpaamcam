<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.buffalo.cse.ubcollecting.SessionAnswerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:text="@string/session_answer_questionnaire_label" />

        <TextView
            android:id="@+id/session_answer_questionnaire_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:text="@string/session_answer_question_label" />

        <TextView
            android:id="@+id/session_answer_question_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:text="@string/session_answer_answer_label" />

        <TextView
            android:id="@+id/session_answer_answer_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16pt" />

        <Button
            android:id="@+id/session_answer_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_button_label" />
    </LinearLayout>

</ScrollView>

