<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/create_new_person"
            android:id="@+id/create_new_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="#000000"
            android:text="@string/assign_session_roles"/>


        <TextView
            android:id="@+id/select_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="#000000"
            android:text="@string/select_person"/>

        <SearchView
            android:id="@+id/search_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search">
        </SearchView>

        <ListView
            android:id="@+id/person_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="#000000"
            android:text="@string/select_role"/>


        <Spinner
            android:id="@+id/choose_role_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/assign_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/assign" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="#000000"
            android:text="@string/chosen_roles"/>

        <ListView
            android:id="@+id/assigned_roles_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/assign_roles_done_button"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/assign_session_roles_continue"/>


    </LinearLayout>

</ScrollView>