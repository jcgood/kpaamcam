<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.buffalo.cse.ubcollecting.SessionPersonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:text="@string/session_person_name_label" />

        <TextView
            android:id="@+id/session_person_name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:text="@string/session_person_session_label" />

        <TextView
            android:id="@+id/session_person_session_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:text="@string/session_person_role_label" />

        <TextView
            android:id="@+id/session_person_role_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16pt" />

        <Button
            android:id="@+id/session_person_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_button_label" />
    </LinearLayout>

</ScrollView>

